<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - Ohalik Tours</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .error-container {
            text-align: center;
            padding: 100px 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        
        .error-icon {
            font-size: 60px;
            margin-bottom: 20px;
        }
        
        .error-title {
            font-size: 28px;
            margin-bottom: 20px;
            color: #e74c3c;
        }
        
        .error-message {
            font-size: 18px;
            margin-bottom: 30px;
            color: #555;
        }
        
        .error-actions {
            margin-top: 30px;
        }
        
        .btn-home {
            background-color: #3498db;
            color: white;
            padding: 12px 24px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        
        .btn-home:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <!-- Include Header -->
    <%- include('./partials/header') %>
    
    <div class="error-container">
        <div class="error-icon">⚠️</div>
        <h1 class="error-title">Oops! Something went wrong</h1>
        <p class="error-message"><%= message || 'We encountered an unexpected error' %></p>
        
        <% if (process.env.NODE_ENV === 'development' && locals.error) { %>
            <div class="error-details">
                <pre><%= error.stack %></pre>
            </div>
        <% } %>
        
        <div class="error-actions">
            <a href="/" class="btn-home">Return to Homepage</a>
        </div>
    </div>
    
    <!-- Include Footer -->
    <%- include('./partials/footer') %>
    
    <script src="/js/main.js"></script>
</body>
</html>